<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RadioGroup
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/radioGroup"

            >


            <RadioButton android:id="@+id/dashboard"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/calculator_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                />
            <RadioButton android:id="@+id/map"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/map_selector"
                android:button="@null"
                android:gravity="center"
                />
            <RadioButton android:id="@+id/reports"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/report_selector"
                android:button="@null"
                android:gravity="center"
                />

            <RadioButton android:id="@+id/settings"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/setting_selector"

                android:button="@null"
                android:gravity="center"
                />


        </RadioGroup>



    </LinearLayout>
</layout>